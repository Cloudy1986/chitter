<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <br>
    <div class="container">
      <div class="row justify-content-center">
        <h1 class="text-center">Peep</h1>
      </div>
    </div>
    <br>
    <div class="container">
      <div class="row justify-content-center">
        <div class="card" style="width: 40rem;">
          <div class="card-body text-center">
            <br>
            <h5 class="card-title"><%= @peep.message %></h5>
            <br>
            <h6 class="card-subtitle mb-2 text-muted">Created by <%= @peep.user.email %> at <%= Time.parse("#{@peep.created_at}").strftime("%H:%M %d/%m/%Y") %></h6>
            <br>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="container">
      <div class="row justify-content-center">
        <h1 class="text-center">Edit Peep</h1>
      </div>
    </div>
    <br>
    <div class="container">
      <div class="row justify-content-center">
        <div class="text-center">
          <%= form_with model: @peep do |form| %>
          <div>
            <%= form.text_field :message, required: true %>
          </div>
          <br>
          <div>
            <%= form.submit class: 'btn btn-dark' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
