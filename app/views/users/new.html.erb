<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>
  <body>
    <br>
    <div class="container">
      <div class="row justify-content-center">
        <h1 class="text-center">Sign up to Chitter</h1>
      </div>
    </div>
    <br>
    <div class="container">
      <div class="row justify-content-center">
        <div class="text-center">
          <%= form_with(model: @user, local: true) do |form| %>
          <div>
            <%= form.label :email %><br>
            <%= form.email_field :email, required: true %>
          </div>
          <br>
          <div>
            <%= form.label :password %><br>
            <%= form.password_field :password, required: true %>
          </div>
          <br>
          <div>
            <%= form.submit 'Sign up', class: 'btn btn-dark' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
